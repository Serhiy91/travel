.landing-page
  height 80%
  .landing-media
    height inherit
    background url('images/landing-bg-lg.jpg')
    background-size cover
    position absolute
    width 100%
    top 0
    z-index -1
    .background-darken
      height 100%
      background rgba(0, 0, 0, .3)

  .landing-media-content
    height 100%
    color #fff
    display flex
    align-items center
  .tours-content
    margin 0 auto
    position relative
    top -64px
    text-align center
    max-width 800px
    padding 0 14px
  .app-title
    font-weight 100
    font-size 2.5em
  .app-description
    font-weight 400

  .landing-content
    position relative
    top -65px
    .landing-paper-block
      transition all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
      box-sizing border-box
      -webkit-tap-highlight-color rgba(0, 0, 0, 0)
      box-shadow rgba(0, 0, 0, 0.156863) 0px 3px 10px, rgba(0, 0, 0, 0.227451) 0px 3px 10px
      border-radius 5px
      background-color #fff
      margin 0 24px
      padding 0

  .landing-footer
    position: relative;
    padding: 18px 24px 14px 48px;
    top: -65px;

  @media(max-width 991px)
    .app-title
      font-size 1.5em
    .app-description
      font-weight 100
    .landing-content
      .landing-paper-block
        margin 0
        border-radius 0
    .landing-footer
      padding-left: 14px;

.company-services
  max-width 1500px
  margin 0 auto
  .service
    text-align center
    padding 34px
  h3
    margin-bottom 10px
    font-weight 500
  p
    margin-top 5px
    text-align left
  .service-paper
    padding 20px
    display inline-block
    width 94px
    height 94px

  @media(max-width 991px)
    .service
      padding 14px

.hot-tours
  .hot-tours-title
    text-align center

.last-news
  height 400px
  background-color #EC407A

  @media(max-width 991px)
    height 150px

.landing-footer-main
  height 200px
  background-color #673AB7
  border-radius 0 0 5px 5px

  @media(max-width 991px)
    border-radius 0
